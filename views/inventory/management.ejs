<%- include('../partials/header') %>

<main>
    <h1><%= title %></h1>
    
    <!-- Display flash messages if any -->
    <% if (messages) { %>
        <% if (messages.error && messages.error.length > 0) { %>
            <div class="flash-message error">
                <p><%= messages.error[0] %></p>
            </div>
        <% } %>
        <% if (messages.success && messages.success.length > 0) { %>
            <div class="flash-message success">
                <p><%= messages.success[0] %></p>
            </div>
        <% } %>
        <% if (messages.notice && messages.notice.length > 0) { %>
            <div class="flash-message notice">
                <p><%= messages.notice[0] %></p>
            </div>
        <% } %>
    <% } %>
    
    <!-- Management Links -->
    <div class="management-container">
        <div class="management-links">
            <div class="management-card">
                <h2>Classification Management</h2>
                <p>Add new vehicle classifications to the database.</p>
                <a href="/inv/add-classification" class="management-link">
                    Add New Classification
                </a>
            </div>
            
            <div class="management-card">
                <h2>Inventory Management</h2>
                <p>Add new vehicles to the inventory database.</p>
                <a href="/inv/add-inventory" class="management-link">
                    Add New Inventory
                </a>
            </div>
        </div>
        
        <!-- Inventory Management Section -->
        <div class="inventory-management-section">
            <h2>Manage Inventory</h2>
            <p>Select a classification from the list to see the items belonging to the classification.</p>
            
            <!-- Classification Select List -->
            <%- classificationSelect %>
            
            <!-- Empty table for inventory display -->
            <table id="inventoryDisplay"></table>
            
            <!-- No JavaScript message -->
            <noscript>
                <p class="notice">JavaScript must be enabled to use this page.</p>
            </noscript>
        </div>
    </div>
</main>

<!-- JavaScript for inventory management -->
<script src="../../js/inventory.js"></script>

<%- include('../partials/footer') %>