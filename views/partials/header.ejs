<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
        <!-- Welcome link (only when logged in) -->
        <% if (locals.loggedin) { %>
            <a title="Click to manage your account" href="/account/">
                Welcome <%= locals.accountData ? locals.accountData.account_firstname : 'User' %>
            </a>
        <% } %>
        
        <!-- My Account link (only when NOT logged in) -->
        <% if (!locals.loggedin) { %>
            <a title="Click to log in" href="/account/login">My Account</a>
        <% } %>
        
        <!-- Logout link (only when logged in) -->
        <% if (locals.loggedin) { %>
            <a title="Click to log out" href="/account/logout">Logout</a>
        <% } %>
    </div>
</header>